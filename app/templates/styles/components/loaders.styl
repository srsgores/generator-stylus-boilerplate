	Centred <progress> styles and loader layout styles
*/
$loaderTextColour ?= #FFF
$loaderTextFontSize ?= 1.5em
$loaderTextMargin ?= 0 0 0.5em 0

.loader
	&-container
		flex 1
		display flex
		box-orient horizontal
		flex-direction column
		align-items center
		justify-content center
	color $loaderTextColour
	display flex
	justify-content center
	flex 1
	flex-direction column
	align-items center
	&-bar
		cursor wait
	&-text
		font-weight 100
		font-size $loaderTextFontSize
		margin-bottom $loaderTextMargin

progress
	margin 0 auto
	cursor wait
